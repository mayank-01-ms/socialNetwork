<h1>Search</h1>
<%= form_tag search_path, :method => "get" do %>
    <%= search_field_tag :query, params[:query], placeholder: "Search for users" %>
    <%= button_tag "Search", :name => nil %>
<% end %>

<h1>Result</h1>
<% @results && @results.each do |user| %>
    <% if is_profile_searchable?(current_user.id, user.id) %>
        <%= render "profile", obj: user %>
    <% end %>
<% end %>