<div class="bg-white border mt-2">
<div>
    <div class="d-flex flex-row justify-content-between align-items-center p-2 border-bottom">
        <div class="d-flex flex-row align-items-center feed-text px-2"><%= render "profile_image", obj: obj.user %>
            <div class="d-flex flex-column flex-wrap ml-2"><span class="font-weight-bold">
                <%= obj.user.first_name + " " + obj.user.last_name %>
            </span><span class="text-black-50 time">
                <%= distance_of_time_in_words(obj.created_at, Time.now) %> ago
            </span></div>
        </div>
        <div class="feed-icon px-2"><i class="fa fa-ellipsis-v text-black-50"></i></div>
    </div>
</div>
<div class="feed-image p-2 px-3">
    <video class="img-fluid img-responsive" src=<%= obj.media %> controls>
</div>
<div class="p-2 px-3">
    <span>
        <%= obj.text %>
    </span></div>
</div>